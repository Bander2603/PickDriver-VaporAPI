# Core auth
JWT_SECRET=change-me
JWT_EXPIRES_IN_SECONDS=604800
APP_VERSION=dev

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pickdriver
DATABASE_USERNAME=pickdriver
DATABASE_PASSWORD=change-me
# TLS modes: disable | prefer | require
DATABASE_TLS_MODE=disable
# Optional custom CA bundle path
DATABASE_TLS_CA_FILE=

# Optional dedicated drill database (for internal DR validation)
DRILL_DB_HOST=127.0.0.1
DRILL_DB_PORT=5432
DRILL_DB_NAME=pickdriver_drill
DRILL_DB_USER=pickdriver_drill_user
DRILL_DB_PASSWORD=change_me
# TLS modes: disable | prefer | require
DRILL_DB_SSLMODE=disable

# Optional integrations
GOOGLE_CLIENT_ID=
INVITE_CODE=

# Internal ops/vault routes
ENABLE_INTERNAL_ROUTES=true
INTERNAL_SERVICE_TOKEN=change_me
MAINTENANCE_MODE=false
# Force HTTPS for /api/internal/* (default true in production, false elsewhere)
INTERNAL_REQUIRE_HTTPS=

# Background tasks
DRAFT_DEADLINE_INITIAL_DELAY_SECONDS=5
DRAFT_DEADLINE_INTERVAL_SECONDS=60

